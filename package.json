{
  "name": "spotify-playlists-as-code",
  "version": "1.0.0",
  "description": "Create Spotify playlists from configuration files.",
  "type": "module",
  "scripts": {
    "login": "tsx src/commands/login",
    "login:debug": "tsx --inspect-brk=0.0.0.0 src/commands/login",
    "follow": "tsx src/commands/follow",
