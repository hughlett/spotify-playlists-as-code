    "unfollow": "tsx src/commands/unfollow",
    "unfollow:debug": "tsx --inspect-brk=0.0.0.0 src/commands/unfollow",
    "healthcheck": "tsx src/commands/healthcheck",
    "sandbox": "tsx src/commands/sandbox",
    "sandbox:debug": "tsx --inspect-brk=0.0.0.0 src/commands/sandbox",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "compile": "tsc",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hughlett/spotify-playlists-as-code.git"
